{
  "name": "jarvis-v3",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "start:desktop": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "package": "electron-builder build --win"
  },
  "build": {
    "appId": "com.jarvis.darking",
    "productName": "Jarvis Darking",
    "win": {
      "target": "nsis",
      "icon": "public/avatar_idle.png"
    },
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^11.5.4",
    "lucide-react": "^0.439.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-squirrel-startup": "^1.0.1",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "wait-on": "^9.0.3"
  }
}
